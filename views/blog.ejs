<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>My Blogs</title>
    <style>
      body {
        background-image: none;
        background-color: cornsilk;
        height: 100%;
        overflow-x: hidden;
      }
      .container {
        color: rgb(81, 98, 111);
        font-size: 18px;
        line-height: 20px;
        font-weight: 400;
        box-sizing: border-box;
      }
      .btn {
        background-color: maroon;
        color: white;
      }
      .container1 {
        display: flex;
        gap: 20px;
      }
      .title {
        margin-bottom: 20px;
      }
      .desc {
        margin-bottom: 30px;
        font-weight: bold;
        line-height: 1.3;
      }
      .body {
        word-wrap: break-word; /* Break long words */
        overflow-wrap: break-word;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <div class="container mt-4">
      <h1 class="title"><%=blog.title%></h1>
      <p class="desc"><%=blog.desc%></p>
      <pre class="body"><%-blog.body%></pre>
      <p>Author: <%= blog.author %></p>

      <div class="container1 mt-4">
        <!-- Form for editing the blog -->
        <form action="/blog/<%= blog._id %>/edit" method="get">
          <div class="mb-3">
            <input class="btn" type="submit" value="Edit" />
          </div>
        </form>

        <!-- Form for deleting the blog -->
        <form action="/blog/<%= blog._id %>/delete" method="post">
          <div class="mb-3">
            <input
              class="btn"
              type="submit"
              value="Delete"
              onclick="return confirm('Are you sure you want to delete this blog post?');"
            />
          </div>
        </form>
      </div>
    </div>
    <%- include('./partials/script.ejs') %>
  </body>
</html>
